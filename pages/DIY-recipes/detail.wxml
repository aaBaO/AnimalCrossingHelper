<!--pages/DIYRecipes/detail.wxml-->
<view class="detail-img">
    <image class="detail-img" mode="aspectFit" src="{{inspectData.imgRef}}"></image>
</view>

<view class="detail">
    <p class="name">{{inspectData.name}}</p>
    <view class="flex-row align-items-center border-btm">
        <p class="info color-lg flex-mp">类型</p>
        <p class="info flex-mp">{{inspectData.category}}</p>
    </view>
    <view class="flex-row align-items-center border-btm">
        <p class="info color-lg flex-mp">获取途径</p>
        <p class="info flex-mp">{{inspectData.access}}</p>
    </view>
    <view class="flex-row align-items-center border-btm">
        <p class="info color-lg flex-mp">尺寸大小</p>
        <p class="info flex-mp">{{inspectData.size}}</p>
    </view>

    <view class="flex-row align-items-start border-btm">
        <p class="info color-lg flex-mp">材料列表</p>
        <view class="mat-list flex-mp">
            <block wx:for="{{inspectData.materials}}" wx:key="id">
                <view id="mat-{{index}}" class="item">
                    <image class="mat-thumbnail" mode="aspectFit" src="{{item.imgRef}}"></image>
                    <view class="name">{{item.name}}</view>
                    <view class="count">x{{item.count}}</view>
                </view>
            </block>
        </view>
    </view>
</view>

<view class="adContainer">
  <ad unit-id="adunit-d4d8b6881caf61c7" ad-intervals="30"></ad>
</view>