.search-bar{
  margin: 0.5em 1em;
  position: relative;
  border: #dddddd;
  border-style: solid;
  border-width: 1px;
  border-radius: 5px;
  padding: 0.3em;
  flex: 2 1 100em;
  font-size: small;
}

.radios{
  float:left;
  padding: 0.2em 1em;
  background: white;
  font-size: small;
}

.list{
  /* position: relative; */
  margin-top: 3em; 
}

.item{
  margin: 0.5em 0.8em;
  border: 1px;
  border-radius: 5px;
  border-style: solid;
  border-color: #dddddd;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

image.thumbnail{
  flex: 1em;
  height: 42px;
  width: 42px;
}

.name{
  flex: 10em;
}

.price{
  flex: 1em;
}

