/**index.wxss**/

.navi-button{
  margin:1.2em 2em;
  padding:1em;
  text-align: center;
  background-color:#f4f4f4;
  border-radius: 5px;
  border: 0.1em solid #dddddd;
}

.magin-top{
  margin:2em 2em 1.2em 2em;
}

.icon{
  box-sizing: border-box;
  height: 2em;
  width: 2em;
  vertical-align: middle;
}

.btn-text{
  box-sizing: border-box;
  padding:1em;
  color:#333333;
  font-size: 14px;
  font-weight: bold;
}

.bd{
  margin: 8em 8em 1em 8em;
  padding:0.6em;
  background-color: #ffffff;
  font-size: small;
  border: 1px solid gainsboro;
  color: #666666;
}

.tips{
  font-size: 12px;
  color: #666666;
}

.border-r20{
  border-radius: 20px;
}