/* pages/turnip-prices/turnip-prices.wxss */
.tips{
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    margin: 0.1em 1em;
    padding: 0.1em 0.1em;
    font-size: medium;
    flex: 1 1 100%;
    color: gray;
}

.property{
    box-sizing: border-box;
    border: 2px gainsboro solid;
    border-radius: 20px;
    position: relative;
    display: flex;
    margin: 0.1em 1em;
    flex-wrap: wrap;
}

.property-name{
    box-sizing: border-box;
    margin: 0.1em 1em;
    padding: 0.1em 0.1em;
    font-size: medium;
}

.radio{
    float:left;
    padding: 0.2em 1em;
    background: white;
    font-size: small;
}

.previous-pattern{
    display: flex;
    margin: 0.1em 1em;
}

.picker{
    box-sizing: border-box;
    font-size: 20px;
    font-weight: 400;
}

.input{
    box-sizing: border-box;
    border-radius: 10px;
    margin: 0.1em 0;
    padding: 0.1em 0.1em;
    background-color: navajowhite;
    color: black;
    text-align: center;
}

.week-day-price-record{
    margin: 0.1em 1em;
    display: flex;
    flex-flow: row wrap;
}

.week-day-price-record .week-day{
    flex: 1 1 20%;
    font-size: 25px;
    font-weight: 700;
}

.week-day-price-record input{
    flex: 1 1 30%;
    margin: 0.1em 0.1em;
    padding: 0.2em 0.2em;
    border: #dddddd;
    border-style: solid;
    border-width: 1px;
    border-radius: 5px;
}

.btn-calc{
    box-sizing: border-box;
    margin:0.1em 5em;
    padding:0.5em;
    background-color: navajowhite;
    border-radius: 10px;
    text-align: center;
    color:#333333;
    font-weight: bold;
    font-size: large;
    border-style: solid;
    border-width: 0.1em;
    border-color:#dddddd;
    flex: 1 1 100%;
}

.results-output{
    background-color: ivory;
}

.results-output scroll-view{
    position: relative;
    margin: 0.1em 0.2em;
}

.tr {
  display: flex;
  width: 80em;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.th {
  justify-content: center;
  background: rgba(250, 220, 225, 0.918);
  display: flex;
  height: 2rem;
  align-items: center;
  text-align: center;
  flex: 1 1 3em;
}
.td {
  justify-content: center;
  border: 1px solid black;
  text-align: center;
  flex: 1 1 3em;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}